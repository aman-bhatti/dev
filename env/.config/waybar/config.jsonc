    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "wlr/taskbar"
        // "hyprland/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "pulseaudio",
        "temperature",
        "cpu",
        "memory"
    ],
    "hyprland/workspaces": {
    "format": "{name}: {icon}",
    "format-icons": {
      "active": "ÔÜí",
      "default": "ÔÑë"
    },
    "on-click": "activate"
  },
  "hyprland/window": {
    "separate-outputs": true
},
    // Modules configuration
    // "sway/workspaces": {
    //     "disable-scroll": true,
    //     "all-outputs": true,
    //     "warp-on-scroll": false,
    //     "format": "{name}: {icon}",
    //     "format-icons": {
    //         "1": "ÔÑ†",
    //         "2": "Ôâ®",
    //         "3": "ÔÑ°",
    //         "4": "ÔÜº",
    //         "5": "ÔÅµ",
    //         "urgent": "ÔÅ™",
